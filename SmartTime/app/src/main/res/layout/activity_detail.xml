<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Title: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/taskTitleTF"
                android:background="@drawable/edit_text_custom"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_width="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/taskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:layout_weight="2"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/taskDescriptionTF"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_text_custom"
                android:layout_height="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/taskCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Category: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/taskCategoryTF"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_text_custom"
                android:layout_height="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/taskDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Date: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/taskDateTF"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_custom"
                android:layout_height="35dp" />
        </LinearLayout>

        <Button
            android:id="@+id/DeleteTaskBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Task"
            android:layout_margin="20dp"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/settings_btn"/>

        <Button
            android:id="@+id/getDirectionsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Get Directions"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/settings_btn"/>

    </LinearLayout>

</ScrollView>